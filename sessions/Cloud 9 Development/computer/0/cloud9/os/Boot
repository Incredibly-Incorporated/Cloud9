-- Preparing Terminal:
term.setCursorPos(1, 1)
term.setTextColor(colors.white)
term.setBackgroundColor(colors.black)
term.clear()

os.loadAPI("cloud9/environment/Reference")
os.loadAPI(Reference.APIS_FRAMEWORK)

